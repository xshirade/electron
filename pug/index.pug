doctype html
html
  head
    meta(charset='utf-8')
    title Markdown Editor
    script.
      const { remote } = require('electron')
      const marked = remote.require('marked')
      const convert = () => {
        const text = document.getElementById('editor').value
        const start = new Date().getTime()
        document.getElementById('converted').innerHTML = marked(text)
      }
    link(rel='stylesheet' type='text/css' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
  body
    main.container
      .row
        .col
          textarea#editor(onKeyUp='convert()')
        .col
          #converted.markdown-body
    footer.footer
      .container
        span.text-muted &copy; 2018 Satoshi Hirade 
    style
      include ../css/stickey-footer.css
      include ../css/github-markdown.css