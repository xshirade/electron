doctype html
html
  head
    meta(charset='utf-8')
    title Markdown Editor
    script(src=`${rootdir}/public/javascripts/index.js`)
    link(rel='stylesheet' type='text/css' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
    link(rel='stylesheet' type='text/css' href=`${rootdir}/public/stylesheets/github-markdown.css`)
    link(rel='stylesheet' type='text/css' href=`${rootdir}/public/stylesheets/stickey-footer.css`)
  body
    main.container
      .row
        .col
          textarea#editor(onKeyUp='convert()')
        .col
          #converted.markdown-body
    footer.footer
      .container
        span.text-muted &copy; 2018 Satoshi Hirade
